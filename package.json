{
    "name": "ride-simulator",
    "version": "1.0.0",
    "author": "Shahabuddin Ahmed",
    "description": "A ride simulator application",
    "main": "app.ts",
    "scripts": {
        "dev": "nodemon",
        "build": "tsc",
        "start": "node -r ts-node/register -r tsconfig-paths/register ./dist/server.js",
        "prod": "yarn build && yarn start",
        "watch-node": "nodemon dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-sass\" \"yarn watch-ts\" \"yarn watch-node\"",
        "test": "jest --forceExit --coverage --verbose --runInBand --detectOpenHandles",
        "test-unit": "jest --forceExit --coverage --verbose --runInBand --detectOpenHandles unit",
        "test-integ": "jest --forceExit --coverage --verbose --runInBand --detectOpenHandles integ",
        "test-e2e": "jest --forceExit --coverage --verbose --runInBand --detectOpenHandles e2e",
        "watch-test": "yarn test -- --watchAll",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
        "debug": "yarn build && yarn watch-debug",
        "serve-debug": "nodemon --inspect dist/server.js",
        "watch-debug": "concurrently -k -p \"[{name}]\" -n \"Sass,TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\" \"yarn watch-sass\" \"yarn watch-ts\" \"yarn serve-debug\""
    },
    "license": "MIT",
    "dependencies": {
        "body-parser": "^1.20.3",
        "express": "^4.21.2",
        "joi": "^17.13.3",
        "morgan": "^1.10.0",
        "mysql2": "^3.15.3",
        "sequelize": "^6.37.7"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.5",
        "@types/express": "^5.0.3",
        "@types/jest": "^30.0.0",
        "@types/morgan": "^1.9.9",
        "@types/node": "^22.5.5",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.6.0",
        "@typescript-eslint/parser": "^8.6.0",
        "eslint": "^9.37.0",
        "faker": "^6.6.6",
        "jest": "^30.2.0",
        "nodemon": "^3.1.7",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.4",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.2"
    }
}
